@model amfTaskManager.Models.UserTask

@{
    ViewData["Title"] = "Task Details";
}

<h2>Task Details</h2>

<div>
    <h4>@Model.Title</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">Description</dt>
        <dd class="col-sm-10">@Model.Description</dd>
    </dl>
</div>

<div>
    <a asp-action="Edit" asp-route-id="@Model.UserTaskID" class="btn btn-warning">Edit</a>
    <a asp-action="Delete" asp-route-id="@Model.UserTaskID" class="btn btn-danger">Delete</a>
    <a asp-action="Index" class="btn btn-secondary">Back to List</a>
</div>
