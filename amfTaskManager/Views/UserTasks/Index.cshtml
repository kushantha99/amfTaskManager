@model IEnumerable<amfTaskManager.Models.UserTask>

@{
    ViewData["Title"] = "Task List";
}

<h2>Task List</h2>

<p>
    <a asp-action="Create" class="btn btn-primary">Create New Task</a>
</p>

<table class="table">
    <thead>
        <tr>
            <th>Title</th>
            <th>Description</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>@item.Title</td>
                <td>@item.Description</td>
                <td>
                    <a asp-action="Edit" asp-route-id="@item.UserTaskID" class="btn btn-warning">Edit</a> |
                    <a asp-action="Details" asp-route-id="@item.UserTaskID" class="btn btn-info">Details</a> |
                    <a asp-action="Delete" asp-route-id="@item.UserTaskID" class="btn btn-danger">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>
